% custom made commands %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand{\singleitem}[1]{\begin{itemize}\item #1\end{itemize}\vskip.15\baselineskip}
\newcommand{\singleitemouter}[1]{\begin{itemize}\item #1\end{itemize}\vskip.30\baselineskip}
\newcommand{\ackitem}[1]{\begin{itemize}\item \small{#1}\end{itemize}\vskip.10\baselineskip}

\newcommand{\figitem}[1]{{\bfseries\textcolor{leitfarbe}{Fig.}}\;#1\vskip.15\baselineskip}
\newcommand{\tabitem}[1]{{\bfseries\textcolor{leitfarbe}{Tab.}}\;#1\vskip.15\baselineskip}

\newcommand{\highlight}[1]{{\bfseries\textcolor{leitfarbe}{#1}}}
\newcommand{\highlightalt}[1]{{\bfseries\textcolor{leitfarbe}{#1}}}

\newcommand{\singleitemcaption}[1]{\begin{itemize}\item {\fontsize{26}{28}\selectfont #1}\end{itemize}\vskip.15\baselineskip}

% citation
\let\oldcite=\cite                                                              
\renewcommand{\cite}[1]{\textcolor{leitfarbe}{\oldcite{#1}}}

% emphasised block for conclusions
\newenvironment<>{emphblock}[1]{% emphasised block environment
  \setbeamercolor{block title}{fg=leitfarbe,bg=white}%
  \setbeamercolor{block body}{bg=grau2}
  \begin{block}#2{#1}}{\end{block}}




\newenvironment<>{refblock}[1]{% emphasised block environment
  \setbeamerfont*{block body}{size=\fontsize{22}{24} \selectfont}
  \begin{block}#2{#1}}{\end{block}}  
  
