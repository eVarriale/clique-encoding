% BODY %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\setbeamercolor{background canvas}{bg=white}

% HEADLINE %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\setbeamercolor{headline}{fg=leitfarbe,bg=grau2}

\setbeamercolor{separation line}{bg=grau2}
\setbeamercolor{title in headline}{fg=leitfarbe}
\setbeamercolor{author in headline}{fg=leitfarbe}
\setbeamercolor{institute in headline}{fg=leitfarbe}

%\setbeamercolor{framesubtitle}{fg=ta3orange, bg=ta2gray}


\setbeamertemplate{headline}{  
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.165\paperwidth}%\centering
      \vspace{30pt}
      \fboxrule.2pt\fboxsep8pt
      \hspace{48pt}\colorbox{grau2}{\begin{minipage}{7.5cm}
	  %\textcolor{black}{financial support by:}\\[.3\baselineskip]
	  %\includegraphics[width=7.5cm]{dfg_logo_blau}\\[\baselineskip]
      \end{minipage}}
      \vspace{-10pt}
      \end{column}
      \begin{column}{.65\paperwidth}
        \vskip8ex
        %\raggedleft
	\centering
        \usebeamercolor{title in headline}{\color{fg}\textbf{\huge{\inserttitle}}\\[3ex]}
        \usebeamercolor{author in headline}{\color{fg}\Large{\insertauthor}\\[1ex]}
        \usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}\\}
        \vskip1ex
      \end{column}
      \begin{column}{.16\paperwidth}
        \vskip10ex
        %\begin{center}
          \vfill\hfill\includegraphics[width=13cm]{GU-Logo-blau-gross.png}
        %\end{center}
        \vskip1ex
      \end{column}
      \begin{column}{.02\paperwidth}
      \end{column}
    \end{columns}
    \vskip5ex
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{3pt}
  \end{beamercolorbox}
}


% FOOTLINE %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

